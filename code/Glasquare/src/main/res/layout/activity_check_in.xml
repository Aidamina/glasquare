<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    style="@style/Layout.Card"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        style="@style/Layout.Center">

        <TextView
            android:id="@+id/progress_text"
            style="@style/TextView.XLarge"
            android:drawableLeft="@drawable/ic_menu_checked_in"/>

        <TextView
            android:id="@+id/primary_notification"
            style="@style/TextView.Notification"/>

        <TextView
            android:id="@+id/secondary_notification"
            style="@style/TextView.Notification.Secondary"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/ProgressBar"/>

</RelativeLayout>